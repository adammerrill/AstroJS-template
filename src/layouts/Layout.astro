---
// src/layouts/Layout.astro
import '../styles/global.css'
import Header from '../components/ui/Header.astro';
import Footer from '../components/ui/Footer.astro';

interface Props {
  title?: string;
}

const { title = "Astro Template" } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full w-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen flex flex-col bg-background font-sans text-foreground">
		<Header />
		<!-- 
            min-h-screen on main ensures it fills the viewport height, 
            pushing the footer below the fold.
        -->
		<main class="flex-1 min-h-screen flex flex-col relative">
			<slot />
		</main>
		<Footer />
	</body>
</html>
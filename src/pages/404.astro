---
// src/pages/404.astro
import BaseLayout from "../layouts/BaseLayout.astro";

// Set the response status code for proper SEO indexing
Astro.response.status = 404;
---

<BaseLayout 
  title="404: Page Not Found" 
  description="The page you requested does not exist."
>
  <section class="container mx-auto px-4 py-20 text-center">
    <h1 class="text-9xl font-extrabold tracking-widest text-primary">404</h1>
    <div class="bg-secondary px-2 text-sm rounded rotate-12 absolute">
      CONTENT MISSING
    </div>
    <p class="mt-8 text-lg text-muted-foreground">
      Apologies, the CMS could not locate the content for this page.
    </p>
    <a href="/" class="inline-block mt-8 px-6 py-3 text-sm font-medium text-white bg-primary rounded hover:bg-primary-dark transition">
      Go Home
    </a>
  </section>
</BaseLayout>